<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="16dp"
    app:cardCornerRadius="8dp"
    tools:context=".ListaFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_item_recycler_image"
            android:layout_width="140dp"
            android:layout_height="170dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/tv_item_recycler_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:maxLines="1"
            android:textSize="22dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/iv_item_recycler_image"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Nombre Usuario" />

        <TextView
            android:id="@+id/tv_item_recycler_origin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_item_recycler_image"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_recycler_name"
            tools:text="Origen" />

        <TextView
            android:id="@+id/tv_item_recycler_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_item_recycler_image"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_recycler_origin"
            />
        <TextView
            android:id="@+id/tv_item_recycler_type_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:gravity="center"
            android:textStyle="italic"
            android:layout_marginEnd="6dp"
            android:layout_marginStart="6dp"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_item_recycler_image"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_recycler_type"
            tools:text="tipo de usuario" />
        <TextView
            android:id="@+id/tv_item_recycler_origen_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Origen"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_item_recycler_image"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_recycler_type_value" />

        <TextView
            android:id="@+id/tv_item_recycler_origen_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:gravity="center"
            android:textStyle="italic"
            android:layout_marginEnd="6dp"
            android:layout_marginStart="6dp"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_item_recycler_image"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_recycler_origen_title"
            tools:text="Direccion de usuario" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>